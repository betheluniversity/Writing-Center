{% extends '::base.html.twig' %}

{% block navbar %}
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('wc_homepage') }}">Bethel University Tutor Labs</a>
          <div class="nav-collapse collapse">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <p class="navbar-text pull-right">
                Logged in as <a href="{{ path('fos_user_profile_show') }}" class="navbar-link">{{ app.user.username }}</a>
              </p>
            {% endif %}
            <ul class="nav">
              <li><a href="{{ path('wc_homepage') }}">Home</a></li>
              {% if is_granted('ROLE_GLOBAL_ADMIN') %}
                <li><a href="{{ path('wc_global_admin') }}">Global Admin</a></li>
              {% endif %}
              {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('wc_admin') }}">Admin</a></li>
              {% endif %}
              {% if is_granted('ROLE_OBSERVER') %} 
                <li><a href="{{ path('wc_observer') }}">Observer</a></li>
              {% endif %}
              {% if is_granted('ROLE_CENTER_MANAGER') %}
                <li><a href="{{ path('wc_center_manager') }}">Center Manager</a></li>
              {% endif %}
              {% if is_granted('ROLE_INSTRUCTOR') %}
                <li><a href="{{ path('wc_instructor') }}">Instructor</a></li>
              {% endif %}
              {% if is_granted('ROLE_COUNSELOR') %}
                <li><a href="{{ path('wc_counselor') }}">Counselor</a></li>
              {% endif %}
              {% if is_granted('ROLE_LEAD_TUTOR') %}
                <li><a href="{{ path('wc_lead_tutor') }}">Lead Tutor</a></li>
              {% endif %}
              {% if is_granted('ROLE_TUTOR') %}
                <li class="active"><a href="{{ path('wc_tutor') }}">Tutor</a></li>
              {% endif %}
              {% if is_granted('ROLE_STUDENT') %}
                <li><a href="{{ path('wc_student') }}">Student</a></li>
              {% endif %}
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
{% endblock %}

{% block body %}
    <div class="span9">
        <div class="hero-unit">
            <h1>Hello, Tutor!</h1>
            <p>This page shows what the Tutor can access.</p>
        </div>
    </div>
{% endblock %}