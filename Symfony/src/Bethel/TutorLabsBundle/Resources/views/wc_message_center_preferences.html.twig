{% block messaging %}
<div class="span12">

	<h2>Message Preferences:</h2>

	<hr />

	<div>
		{{ form_start(form, {'action': path('wc_message_center_preferences'), 'method': 'POST'}) }}
		<table>

			{% if is_granted('ROLE_TUTOR') %}
			<tr>
				<td>{{ form_widget(form.subRequestEmail) }}</td>
				<td>{{ form_label(form.subRequestEmail) }}</td>
			</tr>
			<tr>
				<td>{{ form_widget(form.studentSignUpEmail) }}</td>
				<td>{{ form_label(form.studentSignUpEmail) }}</td>
			</tr>
			{% endif %}
			<tr>
				<td>{{ form_widget(form.save) }}</td>
			</tr>
			
		    
		    
		</table>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}